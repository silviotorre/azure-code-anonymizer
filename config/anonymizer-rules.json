[
    {
      "id": "IP_ADDRESS",
      "pattern": "\\b(?:\\d{1,3}\\.){3}\\d{1,3}\\b",
      "replacement": "__IP_{counter}__"
    },
    {
      "id": "MAC_ADDRESS",
      "pattern": "\\b(?:[A-Fa-f0-9]{2}[:-]){5}[A-Fa-f0-9]{2}\\b",
      "replacement": "__MAC_{counter}__"
    },
    {
      "id": "EMAIL",
      "pattern": "[A-Za-z0-9._%+-]+@[A-Za-z0-9.-]+\\.[A-Za-z]{2,}",
      "replacement": "__EMAIL_{counter}__"
    },
    {
      "id": "SQL_CONN",
      "pattern": "Server=.*?;Database=.*?;User\\sId=.*?;Password=.*?;?",
      "replacement": "__SQL_CONN_{counter}__"
    },
    {
      "id": "SB_CONN",
      "pattern": "Endpoint=sb://.*?;SharedAccessKeyName=.*?;SharedAccessKey=.*?;?",
      "replacement": "__SB_CONN_{counter}__"
    },
    {
      "id": "PAT_TOKEN",
      "pattern": "[A-Za-z0-9_]{20,}",
      "replacement": "__PAT_{counter}__"
    },
    {
      "id": "SAS_TOKEN",
      "pattern": "se=[^&]+&sig=[^&]+&sp=[^&]+",
      "replacement": "__SAS_{counter}__"
    },
    {
      "id": "JWT_TOKEN",
      "pattern": "[A-Za-z0-9_-]+\\.[A-Za-z0-9_-]+\\.[A-Za-z0-9_-]+",
      "replacement": "__JWT_{counter}__"
    },
    {
      "id": "GUID",
      "pattern": "[0-9a-fA-F]{8}-[0-9a-fA-F]{4}-[0-9a-fA-F]{4}-[0-9a-fA-F]{4}-[0-9a-fA-F]{12}",
      "replacement": "__GUID_{counter}__"
    },
    {
      "id": "KEYVAULT_SECRET",
      "pattern": "@Microsoft\\.KeyVault\\(SecretUri=.*?\\)",
      "replacement": "__KEYVAULT_SECRET_{counter}__"
    },
    {
      "id": "CERT_BLOCK",
      "pattern": "-----BEGIN CERTIFICATE-----[\\s\\S]*?-----END CERTIFICATE-----",
      "replacement": "__CERT_{counter}__"
    },
    {
      "id": "SERVICE_CONNECTION",
      "pattern": "serviceConnection\\s*:\\s*['\"]([\\w\\.-]+)['\"]",
      "replacement": "__SERVICE_CONN_{counter}__"
    },
    {
      "id": "VARIABLE_GROUP",
      "pattern": "group\\s*:\\s*['\"]([\\w\\.-]+)['\"]",
      "replacement": "__VARIABLE_GROUP_{counter}__"
    },
    {
      "id": "AZDEVOPS_SECRET",
      "pattern": "\\$\\(\\w+\\)",
      "replacement": "__AZDEVOPS_SECRET_{counter}__"
    },
    {
      "id": "AGENT_POOL",
      "pattern": "pool\\s*:\\s*['\"]([\\w\\.-]+)['\"]",
      "replacement": "__AGENT_POOL_{counter}__"
    },
    {
      "id": "RBAC_ROLEDEF",
      "pattern": "roleDefinitionId\\s*:\\s*['\"][^'\"]+['\"]",
      "replacement": "__RBAC_ROLEDEF_{counter}__"
    },
    {
      "id": "RBAC_ROLEASSIGN",
      "pattern": "roleAssignmentName\\s*:\\s*['\"][^'\"]+['\"]",
      "replacement": "__RBAC_ROLEASSIGN_{counter}__"
    },
    {
      "id": "RBAC_PRINCIPAL",
      "pattern": "principalId\\s*:\\s*['\"]([0-9a-fA-F-]+)['\"]",
      "replacement": "__RBAC_PRINCIPAL_{counter}__"
    },
    {
      "id": "RBAC_SCOPE",
      "pattern": "scope\\s*:\\s*['\"][^'\"]+['\"]",
      "replacement": "__RBAC_SCOPE_{counter}__"
    }    
  ]
  
