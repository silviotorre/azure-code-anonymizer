[
    {
      "id": "IP_ADDRESS",
      "pattern": "\\b(?:\\d{1,3}\\.){3}\\d{1,3}\\b",
      "replacement": "__IP_{counter}__"
    },
    {
      "id": "MAC_ADDRESS",
      "pattern": "\\b(?:[A-Fa-f0-9]{2}[:-]){5}[A-Fa-f0-9]{2}\\b",
      "replacement": "__MAC_{counter}__"
    },
    {
      "id": "EMAIL",
      "pattern": "[A-Za-z0-9._%+-]+@[A-Za-z0-9.-]+\\.[A-Za-z]{2,}",
      "replacement": "__EMAIL_{counter}__"
    },
    {
      "id": "SQL_CONN",
      "pattern": "Server=.*?;Database=.*?;User\\sId=.*?;Password=.*?;?",
      "replacement": "__SQL_CONN_{counter}__"
    },
    {
      "id": "SB_CONN",
      "pattern": "Endpoint=sb://.*?;SharedAccessKeyName=.*?;SharedAccessKey=.*?;?",
      "replacement": "__SB_CONN_{counter}__"
    },
    {
      "id": "PAT_TOKEN",
      "pattern": "(?<=[:=]|^)[A-Za-z0-9_]{20,}",
      "replacement": "__PAT_{counter}__"
    },
    {
      "id": "SAS_TOKEN",
      "pattern": "se=[^&]+&sig=[^&]+&sp=[^&]+",
      "replacement": "__SAS_{counter}__"
    },
    {
      "id": "JWT_TOKEN",
      "pattern": "[A-Za-z0-9_-]+\\.[A-Za-z0-9_-]+\\.[A-Za-z0-9_-]+",
      "replacement": "__JWT_{counter}__"
    },
    {
      "id": "GUID",
      "pattern": "[0-9a-fA-F]{8}-[0-9a-fA-F]{4}-[0-9a-fA-F]{4}-[0-9a-fA-F]{4}-[0-9a-fA-F]{12}",
      "replacement": "__GUID_{counter}__"
    },
    {
      "id": "KEYVAULT_SECRET",
      "pattern": "@Microsoft\\.KeyVault\\(SecretUri=.*?\\)",
      "replacement": "__KEYVAULT_SECRET_{counter}__"
    }
  ]
  
